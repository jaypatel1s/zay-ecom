<div class="py-1 bg-black">
    <div class="container">
        <div class="row no-gutters d-flex align-items-start align-items-center px-md-0">
            <div class="col-lg-12 d-block">
                <div class="row d-flex">
                    <div class="col-md pr-4 d-flex topper align-items-center">
                        <div class="icon mr-2 d-flex justify-content-center align-items-center">
                            <span class="icon-phone2"></span>
                        </div>
                        <% if user_signed_in? %>
                        <span class="text"><%= current_user.mobile %></span>
                        <% else %>
                        <span class="text">8421370161</span>
                        <% end %>
                    </div>
                    <div class="col-md pr-4 d-flex topper align-items-center">
                        <div class="icon mr-2 d-flex justify-content-center align-items-center">
                            <span class="icon-paper-plane"></span>
                        </div>
                        <% if user_signed_in? %>
                        <span class="text"><%= current_user.email %></span>
                        <% else  %>
                        <span class="text">rauttejas066@gmail.com</span>
                        <% end %>
                    </div>
                    <div class="col-5 pr-4 d-flex topper align-items-center text-lg-right">
                        <span class="text"> <%= t ('.buisiness') %> &amp; <%= t ('.free') %></span>
                        <div class="col-4 pr-4 d-flex topper align-items-center" style="color: white important!; list-style-type: none;">
                            <% if current_page?(locale: :en) %>
                                <li><%= link_to "ENG", locale: :gu %></li>
                            <% elsif %>
                                <li><%= link_to "GUJ", locale: :en %></li>
                            <% else %>
                                <li><%= link_to "MAR", locale: :en %></li>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

