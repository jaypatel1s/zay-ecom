<div class="hero-wrap hero-bread" style="background-image: url(<%= asset_path 'bg_6.jpg'%>)">
  <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
      <div class="col-md-9 ftco-animate text-center">
        <p class="breadcrumbs">
          <span class="mr-2"><a href="index.html">Home</a></span>
          <span>Order Shoes</span>
        </p>
        <h1 class="mb-0 bread">Order Shoes</h1>
      </div>
    </div>
  </div>
</div>
<%#= render @order %>
<section class="ftco-section bg-light ">
  <div class="container">
    <div class="one ftco-cart">
      <div class="row">
        <h3>Order Shoes</h3>
        <% if @order_shoes.present? %>
        <table class="table">
          <thead class="thead-primary">
            <tr class="text-center">
              <th>Sr No.</th>
              <th>name</th>
              <th>Quantity</th>
              <th>Size</th>
              <th>price</th>
              <th>Discount</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% @order_shoes.each_with_index do |os, index| %>
              <tr class="text-center">
                <td class="price"><%= index + 1 %></td>
                <td class="price"><%= os.shoe.name %></td>
                <td class="price"><%= os.quantity %></td>
                <td class="price"><%= os.size %></td>
                <td class="price"><%= os.shoe.price * os.quantity%></td>
                <td class="price"><%= os.shoe.discount * os.quantity%></td>
                <td class="price"><%= (os.shoe.price * os.quantity) - (os.discount * os.quantity)%></td>
              </tr>
            <% end %>
          </tbody>
          <% end %>
        </table>
      </div>
      <div class="text-right mt-3">
        <%#= link_to "Edit this order", edit_order_path(@order) %> 
        <%= link_to 'back', orders_path, class:"btn btn-primary py-2 px-2"%>
        <span><%=link_to "Cancel this order", @order, method: :delete, class:"btn btn-primary py-2 px-2"%> </span>       
      </div>
    </div>
  </div>
</section>





